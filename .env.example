# Application Settings
APP_NAME="Blog Management System"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://blog-management-system.test

# Database Connection (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=blog_db
DB_USERNAME=blog_user
DB_PASSWORD=blog_password

# Redis Cache
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Settings (using Mailhog or similar for local)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=${APP_NAME}
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Settings
UPLOAD_MAX_SIZE=50M
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Pagination Settings
POSTS_PER_PAGE=10
COMMENTS_PER_PAGE=20

# Security
APP_KEY=base64:YourGeneratedAppKeyHere==
JWT_SECRET=YourJWTSecretHere

# Session Settings (optional)
SESSION_DRIVER=file
SESSION_LIFETIME=120
