{
    "name": "aj/php-intermediate-blog",
    "description": "Simple blog management system for practice",
    "type": "project",
    "require": {
        "php": ">8.4",
        "twig/twig": "v3.21.1",
        "league/climate": "^3.10",
      "league/csv": "@stable",
      "ext-pdo": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
        ,
        "filp/whoops": "^2.18",
        "friendsofphp/php-cs-fixer": "v3.84.0",
        "phpunit/phpunit": "12.2.7",
        "monolog/monolog": "^3.4",
        "fakerphp/faker": "^1.24",
      "vlucas/phpdotenv": "@stable"

    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "AJ Javadi",
            "email": "amirjavadi25@gmail.com"
        }
    ],
    "minimum-stability": "stable",
  "scripts": {
    "serve":"php -S 127.0.0.1:8000 -t public",
    "seed": "php bin/seed.php"
  }
}
